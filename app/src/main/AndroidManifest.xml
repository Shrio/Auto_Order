<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sheref.autoorder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.LoginActivity" />
        <activity
            android:name=".Views.RestaurantListActivity"
            android:label="Restaurants" />
        <activity
            android:name=".Views.CategoryActivity"
            android:label="Menu categories" />
        <activity
            android:name=".Views.MenuActivity"
            android:label="Menu" />
        <activity
            android:name=".Views.SignupActivity"
            android:label="Account" />
        <activity
            android:name=".Views.CartActivity"
            android:label="Cart" />
        <activity
            android:name=".Views.CheckoutActivity"
            android:label="Checkout" />
        <activity
            android:name=".Views.AccountEditingActivity"
            android:label="Account Editing"></activity>
    </application>

</manifest>